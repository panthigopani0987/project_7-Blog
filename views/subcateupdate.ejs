<%- include('header') %>

<main class="content">
    <div class="container-fluid p-0">

        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Sub Category</h1>
            <!-- <a class="badge bg-dark text-white ms-2" href="upgrade-to-pro.html">
                Get more form examples
            </a> -->
        </div>
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header  bg-primary">
                        <h5 class="card-title mb-0" style="color: white;">Add Sub Category</h5>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" method="post" action="/postupdateSubcategory">  
                            <input type="hidden" name="updateId" value="<%= singleSubData.id %>">                         
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <select name="category" class="p-3 form-control" disabled>
                                    <option value="-- Select Category --">-- Select Category --</option>
                                    <% category.map((val)=>{ %>
                                        <option <% if(singleSubData.categoryId.id == val.id) { %> selected <% } %> value="<%= val.id %>"><%= val.name %></option>
                                    <% }) %>
                                </select>
                            </div>                            
                            <div class="mb-3">
                                <label class="form-label">Sub Category</label>
                                <input type="text" name="subcategory" class="p-3 form-control" value="<%= singleSubData.subcategory %>"  placeholder="Enter Sub Category">  
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-lg btn-primary">Add Sub Category</button>
                            </div>                                   
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('footer') %>