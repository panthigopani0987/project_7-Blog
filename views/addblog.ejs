<%- include('header') %>

<main class="content">
    <div class="container-fluid p-0">

        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Blog</h1>
            <!-- <a class="badge bg-dark text-white ms-2" href="upgrade-to-pro.html">
                Get more form examples
            </a> -->
        </div>
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header  bg-primary">
                        <h5 class="card-title mb-0" style="color: white;">Add Blog</h5>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" method="post" action="/insertdata" enctype="multipart/form-data">
                            <div class="mb-3">
                                <input type="hidden" id="updateId">
                                <label class="form-label">Blog Title</label>
                                <input type="text" name="name" class="form-control" id="fname" value="<%= single.name %>" placeholder="Title"> 
                            </div>                                 
                            <div class="mb-3">
                                <label class="form-label">Product Descripation</label>
                                <input type="text" name="discription" class="form-control" id="lname" value="<%= single.discription %>" placeholder="Write here Discription">  
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Product Images</label>
                                <input type="file" name="image" class="form-control" id="lname">
                                <% if(single){ %>
                                    <img src="<%= single.image %>" width="150">
                                <% } %>  
                            </div>
                            <div class="mt-3">
                                <% if(single){ %>
                                    <button type="submit" class="btn btn-lg btn-primary">Edit Blog</button>
                                    <% }else{ %>
                                        <button type="submit" class="btn btn-lg btn-primary">Add Blog</button>
                                        <% } %>
                                        <a type="button" class="btn btn-lg btn-primary mt-1" href="/viewblog" id="mode">View Blog</a>
                                    </div>                                   
                        </form>
                    </div>
                </div>
            </div>

            
        </div>

    </div>
</main>
<%- include('footer') %>