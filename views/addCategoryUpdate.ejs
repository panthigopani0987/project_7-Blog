<%- include('header') %>

<main class="content">
    <div class="container-fluid p-0">
        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Category</h1>
        </div>
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header  bg-primary">
                        <h5 class="card-title mb-0" style="color: white;">Select Category</h5>
                    </div>
                    <div class="card-body">
                        <form action="/categoryUpdateadd" method="post">
                            <input type="hidden" name="UpdateID" value="<%= singleData.id %>">
                            <div class="mb-3">
                                <input type="hidden" name="updateId" value="<%= singleData.id %>">
                                <label class="form-label">Category Name</label>
                                <input type="text" name="category" value="<%= singleData.category %>" class="p-3 form-control" placeholder="Enter Category"> 
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-lg btn-primary">Update Category</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('footer') %>