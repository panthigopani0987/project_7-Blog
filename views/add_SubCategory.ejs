<%- include('header') %>

<main class="content">
    <div class="container-fluid p-0">

        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Sub Category</h1>
            <!-- <a class="badge bg-dark text-white ms-2" href="upgrade-to-pro.html">
                Get more form examples
            </a> -->
        </div>
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header  bg-primary">
                        <h5 class="card-title mb-0" style="color: white;">Add Sub Category</h5>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" method="post" action="/postSubcategory">
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <select name="category" class="p-3 form-control">
                                    <option value="-- Select Category --">-- Select Category --</option>
                                    <% category.map((val)=>{ %>
                                        <option value="<%= val.id %>"><%= val.name %></option>
                                    <% }) %>
                                </select>
                            </div>                                 
                            <div class="mb-3">
                                <label class="form-label">Sub Category</label>
                                <input type="text" name="subcategory" class="p-3 form-control"  placeholder="Enter Sub Category">  
                            </div>
                            <div class="mt-3">
                                <button type="submit" class="btn btn-lg btn-primary">Add Sub Category</button>
                            </div>                                   
                        </form>
                    </div>
                </div>
            </div>

            
        </div>
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="card">
                    <div class="card-header  bg-primary">
                        <h5 class="card-title mb-0" style="color: white;">Sub Category</h5>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tr>
                                <td>
                                    Category
                                </td>
                                <td>
                                    Sub Category
                                </td>
                                <td>
                                    Delete
                                </td>
                                <td>
                                    Update
                                </td>
                            </tr>
                            <% submergeTbl.map((val)=>{
                            %>
                                <tr>
                                    <td><%= val.categoryId.name %></td>
                                    <td><%= val.subcategory %></td>
                                    <td>
                                        <a href="">
                                            <button class="btn btn-lg btn-primary">
                                                <i class="align-middle" data-feather="trash-2"></i> 
                                            </button>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/updateSubCate?id=<%= val.id %>">
                                            <button class="btn btn-lg btn-primary">
                                                <i class="align-middle" data-feather="edit"></i> 
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</main>
<%- include('footer') %>